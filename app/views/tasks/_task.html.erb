<%=  turbo_frame_tag task do%>
<div class="card-task">
  <%= link_to '-', task_path(task), class: 'btn-delete-task', data: {turbo_method: :delete} %>
  <%= link_to '...', edit_task_path(task), class: 'btn-edit-task', data: { turbo_frame: "edit_#{task.id}" } %>
  <h5><%= task.title %></h5>
  <p><strong>Estado:</strong> <%= task.status %></p>
</div>
<% end %>
<%= turbo_frame_tag "edit_#{task.id}" %>
